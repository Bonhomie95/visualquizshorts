# ===============================
# APP
# ===============================
APP_NAME=VisualQuizShorts
ENV=development

# ===============================
# PATHS
# ===============================
OUTPUT_DIR=output
CACHE_DIR=cache
ASSETS_DIR=assets
DATA_DIR=data

# ===============================
# VIDEO SETTINGS
# ===============================
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
FPS=30

# seconds shown on timer
TIMER_SECONDS=15

# animation timing (seconds)
ENTRY_ANIMATION_DURATION=0.5
IMAGE_STAGGER_DELAY=0.2

# ===============================
# FONTS
# ===============================
FONT_PRIMARY=assets/fonts/Inter-Bold.ttf
FONT_SECONDARY=assets/fonts/Inter-Regular.ttf

# ===============================
# WIKIPEDIA
# ===============================
WIKI_IMAGE_MIN_WIDTH=600
WIKI_IMAGE_MIN_HEIGHT=600
WIKI_LANG=en

# ===============================
# YOUTUBE API
# ===============================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_CHANNEL_ID=
DRY_RUN=true
UPLOAD_INTERVAL_HOURS=24



# ===============================
# AUDIO
# ===============================
ENABLE_BACKGROUND_MUSIC=true
MUSIC_VOLUME=0.15

# ===============================
# LOGGING
# ===============================
LOG_LEVEL=INFO
